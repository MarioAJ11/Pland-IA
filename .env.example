# ===========================================
# DOCKER COMPOSE - VARIABLES DE ENTORNO
# ===========================================
# Copiar este archivo como .env y configurar valores

# Base de datos PostgreSQL
DB_HOST=postgres
DB_PORT=5432
DB_NAME=plandiadb
DB_USER=postgres
DB_PASSWORD=CHANGE_ME

# Seguridad JWT (MÍNIMO 32 CARACTERES)
JWT_SECRET=CHANGE_ME_MINIMUM_32_CHARACTERS_REQUIRED
JWT_ISSUER=PlandIA.AuthService
JWT_AUDIENCE=PlandIA.Clients

# CORS - Orígenes permitidos (separados por comas)
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# Spring Boot Environment
SPRING_PROFILES_ACTIVE=prod

# ASP.NET Core Environment
ASPNETCORE_ENVIRONMENT=Production

# pgAdmin (opcional)
PGADMIN_EMAIL=admin@plandai.com
PGADMIN_PASSWORD=admin
