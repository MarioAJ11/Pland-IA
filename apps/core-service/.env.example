# ============================================
# CORE SERVICE - VARIABLES DE ENTORNO
# ============================================
# Copia este archivo a .env y ajusta los valores
# NUNCA subas el archivo .env al repositorio

# ============================================
# ENTORNO / PROFILE
# ============================================
# Opciones: dev, prod
SPRING_PROFILES_ACTIVE=dev

# ============================================
# BASE DE DATOS (PostgreSQL)
# ============================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=plandiadb
DB_USER=postgres
DB_PASSWORD=mysecretpassword
DB_SCHEMA=core_schema

# ============================================
# JWT VALIDATION (para validar tokens del Auth Service)
# ============================================
# Debe coincidir con JWT_SECRET del Auth Service
JWT_SECRET=CAMBIAME_POR_UN_SECRET_SEGURO_DE_AL_MENOS_32_CARACTERES
JWT_ISSUER=PlandIA.AuthService
JWT_AUDIENCE=PlandIA.Clients

# ============================================
# CORS CONFIGURATION
# ============================================
# Origenes permitidos separados por coma
# Ejemplo producción: https://pland-ia.com,https://app.pland-ia.com
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,https://localhost:1420

# ============================================
# LOGGING
# ============================================
# Niveles: TRACE, DEBUG, INFO, WARN, ERROR
LOG_LEVEL=INFO

# Ruta de logs
LOG_PATH=logs/core-service

# Días de retención de logs
LOG_RETENTION_DAYS=30

# ============================================
# SERVER CONFIGURATION
# ============================================
# Puerto del servicio (default: 8080)
SERVER_PORT=8080

# Entorno: development, staging, production
SPRING_PROFILES_ACTIVE=development

# ============================================
# HIBERNATE/JPA
# ============================================
# IMPORTANTE: En producción usar 'validate' o 'none'
# Valores: none, validate, update, create, create-drop
JPA_DDL_AUTO=update

# Mostrar SQL en logs (true solo en dev)
JPA_SHOW_SQL=true

# Formatear SQL en logs
JPA_FORMAT_SQL=true
